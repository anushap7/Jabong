<% Comment.all.each do |acomment| %>
<%= acomment.commenter %></br>

<% acomment.replies.each do |b| %>
<%= b.reply %><br/>
<% end %>

<%= form_for :replies do |rep|%>
<%= rep.text_field :reply %>
<%= rep.submit "Reply" %></br>
<% end %>
<% end %>

<%= form_for :comments, comments_path do |c|%>
<%= c.text_field :commenter %>
<%= c.submit "Add comment" %></br>
<% end %>










