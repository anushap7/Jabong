<div class="row">

    <% @articles.each do |article| %>

    
    <div class="col-sm-3">
      
      <div class="well well-sm">
        

        <h4>Name: <%= article.name %></h4>
        <h5>Item: <%= article.item %></h5>
        <h6>Price: <%= article.amount %></h6>
        <hr>
        <div class="btn-group">
        <%= link_to 'Edit', edit_article_path(article), :class => "btn btn-info"%> 
        <%= link_to 'Destroy', article_path(article), :class => "btn btn-info",
        method: :delete, data: { confirm: ' Are you sure?' } %> 
        <%= link_to 'Show', article_path(article) , :class => "btn btn-info" %>
      </div>
      </div>



    </div>
    <% end %>
  </div>

  <div id="but"><%= link_to 'Add New Orders', new_article_path, :class => "btn btn-warning" %></div>
<div class="nav nav-pills pull-right"><%= paginate @articles %></div>
</div>
















































